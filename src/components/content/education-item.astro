---
interface Props {
	school: string;
	course: string;
	period: string;
}

const { school, course, period } = Astro.props;
---

<div class="flex flex-col w-full">
  <h3 class="text-white text-lg font-semibold">{school}</h3>
  <span class="text-white text-sm">{course}</span>
  <span class="text-text text-sm">{period}</span>
</div>
