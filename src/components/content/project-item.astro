---
interface Props {
  title: string;
  link: string;
  description: string;
}

const { title, link, description } = Astro.props;
---

<div class="flex flex-col w-full gap-1">
  <a href={link} target="_blank"><h3 class="text-white text-lg font-semibold hover:underline">{title}</h3></a>
  <span class="text-text text-sm">{description}</span>
</div>
