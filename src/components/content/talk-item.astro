---
interface Props {
	title: string;
	authors: string;
	description: string;
}

const { title, authors, description } = Astro.props;
---

<div class="flex flex-col w-full">
  <h3 class="text-white text-md font-semibold">{title}</h3>
  <span class="text-text text-sm">{authors}</span>
  <span class="text-text text-sm">{description}</span>
</div>
