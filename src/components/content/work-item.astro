---
interface Props {
	position: string;
	place: string;
	period: string;
	description: string;
}

const { position, place, period, description } = Astro.props;
---

<div class="flex flex-col w-full">
  <h3 class="text-white text-lg font-semibold">{position}</h3>
  <span class="text-white text-sm">{place}</span>
  <span class="text-text text-sm">{period}</span>
  <span class="text-text text-sm mt-2">{description}</span>
</div>
